<UserControl
  x:Class="tweetz.core.Views.TitleBarView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Background="{DynamicResource TitleBarBackgroundBrush}"
  Foreground="{DynamicResource TitleBarForegroundBrush}"
  d:DesignHeight="19"
  d:DesignWidth="300"
  mc:Ignorable="d">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Image
      Width="18"
      Margin="7,3"
      Source="../app.ico" />

    <TextBlock
      Grid.Column="1"
      VerticalAlignment="Center"
      Text="{Binding Title}" />

    <Grid
      Grid.Column="2"
      HorizontalAlignment="Right">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <TextBlock
        Grid.Column="0"
        Padding="15,4"
        Cursor="Hand"
        FontSize="10"
        MouseDown="Minimize"
        Text="—"
        TextAlignment="Center"
        ToolTip="{StaticResource minimize-tooltip}">
        <TextBlock.Style>
          <Style>
            <Style.Triggers>
              <Trigger Property="TextBlock.IsMouseOver" Value="True">
                <Setter Property="TextBlock.Foreground" Value="White" />
                <Setter Property="TextBlock.Background" Value="{StaticResource ButtonHoverBrush}" />
              </Trigger>
            </Style.Triggers>
          </Style>
        </TextBlock.Style>
      </TextBlock>

      <TextBlock
        Grid.Column="1"
        Padding="15,4"
        HorizontalAlignment="Right"
        Cursor="Hand"
        FontSize="10"
        MouseDown="Close"
        Text="&#x2573;"
        TextAlignment="Center"
        ToolTip="{StaticResource close-tooltip}"
        Visibility="{Binding Settings.HideCloseButton, Converter={StaticResource NotBooleanToVisibilityConverter}}">
        <TextBlock.Style>
          <Style>
            <Style.Triggers>
              <Trigger Property="TextBlock.IsMouseOver" Value="True">
                <Setter Property="TextBlock.Foreground" Value="White" />
                <Setter Property="TextBlock.Background" Value="#e41123" />
              </Trigger>
            </Style.Triggers>
          </Style>
        </TextBlock.Style>
      </TextBlock>
    </Grid>
  </Grid>
</UserControl>